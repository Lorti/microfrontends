<style>
    .mf-dashboard {
        overflow: hidden;
        position: absolute;
        display: flex;
        align-items: center;
        top: -15px;
        right: 0;
        padding: 1em;
        width: 300px;
        color: #000;
        background: #fff;
        border-radius: 3px;
        box-shadow: 0 0 10px rgba(0, 0, 0, .2);
    }

    .mf-dashboard__avatar {
        border-radius: 50%;
        margin-right: 1rem;
    }

    .mf-dashboard__notification {
        text-align: right;
        flex-grow: 1;
    }
</style>
<div class="mf-dashboard">
    <img class="mf-dashboard__avatar" src="http://i.pravatar.cc/90" alt="Avatar" width="45" height="45">
    <span>{{ username }}</span>
    {{#if notifications}}<span class="mf-dashboard__notification">✉️</span>{{/if}}
</div>
